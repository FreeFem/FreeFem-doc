  int2d(Th)( 
	       Strain2(s)'*(A1*Strain2(t)) //' 
	    - Strain(u)'*Strain2(t)  //'
	    - Strain(v)'*Strain2(s) //'
     //      + 1e-6*(u1*v2+u2*v2)
	     )
  +  intalledges(Th)( dnn(t)*dn(u) + dnn(s)*dn(v) ) 
