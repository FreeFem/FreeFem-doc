    ChangeNumbering(dA, out, outPETSc);
    return outPETSc;
}
func int funcJ(real[int]& inPETSc) {
    ChangeNumbering(dA, u1[], inPETSc, inverse = true, exchange = true);
    dA = vPb(Wh, Wh, tgv = -2);
    return 0;
}
