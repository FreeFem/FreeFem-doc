border CC(t=0,pi){x=RR*cos(t);y=RR*sin(t);label=lab;}
mesh Th2=buildmesh(  Taxe(2*RR/h)+ CC(pi*RR/h) ) ;

int MaxLayersT=(int(2*pi*RR/h)/4)*4;
func zminT = 0;
