// the enarge ... 
macro W(I) ( 
	C1*(I[0] - 4. - log(I[2]) ) 
      + D1 *sqr(1.-sqrt(I[2])) )   //EOM  (J-1)^2 
          
macro dW(I,dI)  ( 
	  C1*    (dI[0] - dI[2]/I[2] )
	+ 0.5*D1*dI[2]*(1.-1/sqrt(I[2])  )
	)    //EOM
// EOM
