macro VarfCS(varfName, meshName, VhName)
    varf varfName([uw, uwB, pw, Tw], [v, vB, q, W]) =
     int2d(meshName,mpirank)(- div(uw)*q -div(v)*pw - eps*pw*q
         + UgradU(uG,uw)'*[v,vB]
         + UgradU(uw,uG)'*[v,vB]
         + ( Grad(uw,uwB)'*Grad(v,vB))*IRe
         - coef*IRa*Tw*vB
         -[uG,uGB]'*grad(W)*Tw
         -[uw,uwB]'*grad(W)*TG
         + grad(Tw)'*grad(W)*IPr)
    + on(1,2,3,4, uw=0,uwB=0)
    + on(2,Tw=Tcold) + on(4,Tw=Thot);
