func real J(real[int] &X)
{
	Vh u1,u2;
	u1[] = X(0:Vh.ndof-1);
	u2[] = X(Vh.ndof:2*Vh.ndof-1);
	iter++;
	real[int] Au1 = A*u1[], Au2 = A*u2[];
